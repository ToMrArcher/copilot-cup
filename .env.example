# ===========================================
# KPI Dashboard Platform - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# ===========================================
# Database Configuration
# ===========================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/kpi_dashboard
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=kpi_dashboard

# ===========================================
# Backend Configuration
# ===========================================
NODE_ENV=development
PORT=4000
API_URL=http://localhost:4000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# ===========================================
# Frontend Configuration
# ===========================================
VITE_API_URL=http://localhost:4000

# ===========================================
# Security
# ===========================================
# Used for signing share links
SHARE_LINK_SECRET=your-share-link-secret-change-in-production

# Used for encrypting integration credentials (API keys, tokens)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your-64-char-hex-encryption-key-change-in-production

# ===========================================
# Optional: AWS Configuration (for production)
# ===========================================
# AWS_REGION=eu-north-1
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
